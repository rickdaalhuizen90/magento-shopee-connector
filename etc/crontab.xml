<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Cron/etc/crontab.xsd">
    <group id="shopee">
        <job name="shopee_sync_products" instance="Upvado\ShopeeConnector\Cron\SyncProducts"
            method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="shopee_fetch_orders" instance="Upvado\ShopeeConnector\Cron\FetchOrders"
            method="execute">
            <schedule>*/30 * * * *</schedule>
        </job>
    </group>
</config>
