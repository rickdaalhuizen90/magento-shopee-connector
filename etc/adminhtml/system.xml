<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="upvado" translate="label" sortOrder="100">
            <label>Upvado</label>
        </tab>
        <section id="shopee_connector" translate="label" type="text" sortOrder="100"
            showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Shopee Connector</label>
            <tab>upvado</tab>
            <resource>Upvado_ShopeeConnector::config</resource>

            <!-- General Settings -->
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Enable Module</label>
                    <comment>Turn the Shopee Connector on or off.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="20"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Environment</label>
                    <comment>Select the environment: Sandbox for testing or Production for live use.</comment>
                    <source_model>Upvado\ShopeeConnector\Model\Config\Source\Environment</source_model>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
                <field id="partner_id" translate="label" type="text" sortOrder="30"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Partner ID</label>
                    <comment>Enter your Shopee Partner ID for Production.</comment>
                    <depends>
                        <field id="enabled">1</field>
                        <field id="environment">1</field>
                    </depends>
                </field>
                <field id="partner_secret" translate="label" type="obscure" sortOrder="40"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Partner Secret</label>
                    <comment>Enter the secret key for your Shopee Partner ID.</comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="enabled">1</field>
                        <field id="environment">1</field>
                    </depends>
                </field>
                <field id="sandbox_partner_id" translate="label" type="text" sortOrder="50"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox Partner ID</label>
                    <comment>Enter your Shopee Partner ID for Sandbox testing.</comment>
                    <depends>
                        <field id="enabled">1</field>
                        <field id="environment">0</field>
                    </depends>
                </field>
                <field id="sandbox_partner_secret" translate="label" type="obscure" sortOrder="60"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox Partner Secret</label>
                    <comment>Enter the secret key for your Shopee Sandbox Partner ID.</comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="enabled">1</field>
                        <field id="environment">0</field>
                    </depends>
                </field>
            </group>

            <!-- Notifications -->
            <group id="notifications" translate="label" type="text" sortOrder="20" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>Notifications</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Enable Notifications</label>
                    <comment>Turn on notifications to receive updates via email or webhook.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="email" translate="label" type="select" sortOrder="20" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Notification Email</label>
                    <comment>Select the email identity to receive notifications.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
                <field id="webhook" translate="label" type="text" sortOrder="30" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Webhook URL</label>
                    <comment>Enter the webhook URL to receive real-time updates.</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>

            <!-- Logging -->
            <group id="logging" translate="label" type="text" sortOrder="30" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>Logging</label>
                <field id="debug_mode" translate="label" type="select" sortOrder="10"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Debug Mode</label>
                    <comment>Enable debug mode to log detailed information for troubleshooting.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="retention_days" translate="label" type="text" sortOrder="20"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Retention (Days)</label>
                    <comment>Set the number of days to retain logs. Must be a number.</comment>
                    <validate>validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>

